

<% if flash[:msg] %>
  <div class="message"><%= flash[:msg] %></div>
<% end %>

<h1>Ok here is your question:</h1>

<h2>
  <% random = @team.round.questions.sample %>
  <% q = random.question_text %>
  <%= CGI.unescapeHTML(q) %>
</h2>
<br>
<br>

<h4>Answer choices:</h4>
<ul>
  <% random.all_answers.shuffle.each do |answer| %>
  <li><%= answer %></li><br>
  <% end %>
</ul>
<h3>Enter your answer</h3>
<%= form_for @answer do |f| %>
    
    <%= f.text_field :text %>
  
    <%= f.hidden_field :team_id, value: @team.id  %>
    <%= f.hidden_field :question_id, value: random.id  %>

    <%= f.submit "Submit Answer", :class => 'submit' %>

<% end %>

<br>
<br>
 
<%= link_to "next question", team_path(@team) %>
<br>
<br>
<%= link_to "End the Game.", teams_path %>